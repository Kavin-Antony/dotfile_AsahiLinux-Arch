{
  "layer": "bottom",
  "position": "top",
  "height": 40,
  "spacing": 2,
  "exclusive": true,
  "gtk-layer-shell": true,
  "passthrough": false,
  "fixed-center": true,
  "modules-left": ["hyprland/workspaces", "hyprland/window"],
  "modules-center": ["mpris"],
  "modules-right": [
    "cpu",
    "memory",
    "pulseaudio",
    //"custom/pamixer",
    "clock",
    "clock#simpleclock",
    "tray",
    "custom/notification",
    "battery",
    "custom/power",
  ],
  "custom/spotify": {
    "format": " ÔÜº  {}",
    "return-type": "json",
    "on-click": "playerctl -p spotify play-pause",
    "on-click-right": "spotifatius toggle-liked",
    "on-click-middle": "playerctl -p spotify next",
    "exec": "spotifatius monitor",
  },
  "mpris": {
    "player": "spotify",
    "dynamic-order": ["artist", "title"],
    "format": "{player_icon} {dynamic}",
    "format-paused": "{status_icon} <i>{dynamic}</i>",
    "status-icons": {
      "paused": "ÔÅå",
    },
    "player-icons": {
      "default": "ÔÅã",
    },
  },
  "hyprland/workspaces": {
    "on-click": "activate",
    "format": "{id}",
    "all-outputs": true,
    "disable-scroll": false,
    "active-only": false,
  },
  "hyprland/window": {
    "format": "{title}",
  },
  "tray": {
    "show-passive-items": true,
    "spacing": 10,
  },
  "clock#simpleclock": {
    "tooltip": false,
    "format": "ÔÄó {:%H:%M}",
  },
  "clock": {
    "format": "ÔÅ≥ {:L%a %d %b}",
    "calendar": {
      "format": {
        "days": "<span weight='normal'>{}</span>",
        "months": "<span color='#cdd6f4'><b>{}</b></span>",
        "today": "<span color='#f38ba8' weight='700'><u>{}</u></span>",
        "weekdays": "<span color='#f9e2af'><b>{}</b></span>",
        "weeks": "<span color='#a6e3a1'><b>W{}</b></span>",
      },
      "mode": "month",
      "mode-mon-col": 1,
      "on-scroll": 1,
    },
    "tooltip-format": "<span color='#cdd6f4' font='Lexend 16'><tt><small>{calendar}</small></tt></span>",
  },
  "cpu": {
    "format": "Ôãõ {usage}%",
    "tooltip": true,
    "interval": 1,
  },
  "memory": {
    "format": "ÓøÖ {used:0.1f}Gi",
  },
  "pulseaudio": {
    "format": "{icon} {volume}%",
    "format-muted": "Ôë¶  muted",
    "format-icons": {
      "headphone": "ÔÄ•",
      "default": ["ÔÄ¶ ", "ÔÄß ", "ÔÄ® "],
    },
    "on-click": "pavucontrol",
  },
  "custom/sep": {
    "format": "|",
    "tooltip": false,
  },
  "custom/power": {
    "tooltip": false,
    "on-click": "wlogout -p layer-shell &",
    "format": "‚èª",
  },
  "battery": {
    "format": " {icon} {capacity}% ",
    "format-charging": "‚ö° {capacity}%",
    "format-plugged": "üîå {capacity}%",
    "format-alt": "{time} remaining",
    "tooltip-format": "{capacity}% - {power}W",
    "states": {
        "good": 80,
        "warning": 30,
        "critical": 15
    },
    "format-icons": ["ÔâÑ", "ÔâÉ", "ÔâÇ", "ÔâÅ", "ÔâÄ"],
  },
 
"disk": {
    "path": "/",  
    "format": "{icon} {percentage_used}%",
    "format-alt": "{used}B/{total}B used",
    "tooltip-format": "{used}B/{total}B ({percentage_used}%)",
    "states": {
        "good": 50,
        "warning": 80,
        "critical": 90
    },
    "format-icons": ["ÔÇ†", "ÔÇ†", "ÔÇ†", "ÔÇ†", "ÔÇ†"]
  },


  "custom/notification": {
    "escape": true,
    "exec": "swaync-client -swb",
    "exec-if": "which swaync-client",
    "format": "{icon}",
    "format-icons": {
      "none": "Û∞Ö∫",
      "notification": "Û∞°ü",
    },
    "on-click": "sleep 0.1 && swaync-client -t -sw",
    "return-type": "json",
    "tooltip": false,
  },

}
